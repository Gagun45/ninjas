generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Superhero {
  id                Int          @id @default(autoincrement())
  pid               String       @unique @default(cuid())
  nickname          String       @unique
  realName          String
  originDescription String
  superpowers       Superpower[]
  catchPhrase       String
  images            Images[]
}

model Superpower {
  id        Int         @id @default(autoincrement())
  power     String      @unique
  Superhero Superhero[]
}

model Images {
  id          Int       @id @default(autoincrement())
  url         String
  Superhero   Superhero @relation(fields: [superheroId], references: [id], onDelete: Cascade)
  superheroId Int
}
